<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BotonFuncional">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">90sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/boton_redondo_funcional</item>
    </style>

    <style name="BotonFuncional2">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">90sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/boton_redondo_funcional2</item>
    </style>

    <style name="numero">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">90sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/numero_redondo</item>
    </style>

    <style name="igual">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">90sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/boton_igual</item>
    </style>

</resources>
